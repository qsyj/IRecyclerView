<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/pull_to_load_footer_content"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="0dp">

        <ProgressBar
            android:id="@+id/pull_to_load_footer_progressbar"
            android:layout_width="@dimen/dp_loading_22"
            android:layout_height="@dimen/dp_loading_22"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:indeterminateDrawable="@drawable/refresh_loading"
            android:indeterminateDuration="1800" />

        <TextView
            android:id="@+id/pull_to_load_footer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pull_to_refresh_header_hint_loading"
            android:textColor="#999999"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>
