<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/icon_default_loading_logo_small" />
    <item>
        <rotate
            android:fromDegrees="-45"
            android:interpolator="@android:anim/linear_interpolator"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="315">
            <bitmap
                android:antialias="true"
                android:filter="true"
                android:src="@drawable/icon_default_loading_circle_small" />
        </rotate>
    </item>

</layer-list>